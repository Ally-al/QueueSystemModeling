<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="1280.0" styleClass="scene" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
    <children>
        <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0">
            <children>
                <Button fx:id="stepModeButton" alignment="CENTER" mnemonicParsing="false" onAction="#onClickStepMode"
                        prefHeight="50.0" prefWidth="300.0" text="Пошаговый режим"
                        textAlignment="CENTER" textFill="BLACK">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="autoModeButton" alignment="CENTER" mnemonicParsing="false" onAction="#onClickAutoMode"
                        prefHeight="50.0" prefWidth="300.0" text="Автоматический режим"
                        textAlignment="CENTER" textFill="BLACK">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="settingsButton" alignment="CENTER" mnemonicParsing="false" onAction="#onClickSettings"
                        prefHeight="50.0" prefWidth="300.0" text="Настройки"
                        textAlignment="CENTER" textFill="BLACK">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </children>
</AnchorPane>
